{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Configure NethVoice Hotel",
    "$id": "http://nethserver.org/json-schema/task/input/nethvoice/set-nethvoice-hotel",
    "description": "Configure NethVoice hotel module",
    "examples": [
        {
            "nethvoice_hotel": true,
            "nethvoice_hotel_fias_address": "fias.server.local",
            "nethvoice_hotel_fias_port": 8080
        },
        {
            "nethvoice_hotel": true,
            "nethvoice_hotel_fias_address": "",
            "nethvoice_hotel_fias_port": ""
        },
        {
            "nethvoice_hotel": true
        },
        {
            "nethvoice_hotel": false
        }
    ],
    "type": "object",
    "required": [
        "nethvoice_hotel"
    ],
    "properties": {
        "nethvoice_hotel": {
            "description": "NethVoice hotel module enabled",
            "type": "boolean"
        },
        "nethvoice_hotel_fias_address": {
            "description": "FIAS server address",
            "type": "string",
            "anyOf": [
                {
                    "format": "hostname",
                    "pattern": "\\."
                },
                {
                    "format": "ipv4"
                },
                {
                    "pattern": "^$"
                }
            ]
        },
        "nethvoice_hotel_fias_port": {
            "description": "FIAS server port",
            "anyOf": [
                {
                    "type": "integer",
                    "minimum": 0,
                    "maximum": 65535
                },
                {
                    "type": "string",
                    "pattern": "^$"
                }
            ]
        }
    },
    "additionalProperties": false
}
