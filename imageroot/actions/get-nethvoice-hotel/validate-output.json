{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Get NethVoice Hotel configuration",
    "$id": "http://nethserver.org/json-schema/task/output/nethvoice/get-hotel-configuration",
    "description": "Get NethVoice Hotel configuration",
    "examples": [
        {
            "nethvoice_hotel": true,
            "nethvoice_hotel_fias_address": "fias.server.local",
            "nethvoice_hotel_fias_port": 8080
        },
        {
            "nethvoice_hotel": true,
            "nethvoice_hotel_fias_address": "",
            "nethvoice_hotel_fias_port": ""
        },
        {
            "nethvoice_hotel": false,
            "nethvoice_hotel_fias_address": "",
            "nethvoice_hotel_fias_port": ""
        }
    ],
    "type": "object",
    "required": [
        "nethvoice_hotel",
        "nethvoice_hotel_fias_address",
        "nethvoice_hotel_fias_port"
    ],
    "properties": {
        "nethvoice_hotel": {
            "description": "NethVoice hotel module enabled",
            "type": "boolean"
        },
        "nethvoice_hotel_fias_address": {
            "description": "FIAS server address",
            "type": "string",
            "anyOf": [
                {
                    "format": "hostname",
                    "pattern": "\\."
                },
                {
                    "format": "ipv4"
                },
                {
                    "pattern": "^$"
                }
            ]
        },
        "nethvoice_hotel_fias_port": {
            "description": "FIAS server port",
            "anyOf": [
                {
                    "type": "integer",
                     "minimum": 0,
                     "maximum": 65535
                },
                {
                    "type": "string",
                    "pattern": "^$"
                }
            ]
        }
    },
    "additionalProperties": false
}
