# Enable middleware service if it exists
# This is needed when updating from a version without middleware to one with middleware
# If the service doesn't exist, this command will simply fail without causing issues

echo "Enabling nethcti-middleware service for middleware support"
systemctl --user enable --now nethcti-middleware.service

# Enable NethVocice CDR cleanup timer
echo "Enabling nethvoice-cdr-cleanup timer"
systemctl --user enable --now nethvoice-cdr-cleanup.timer
