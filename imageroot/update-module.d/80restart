#!/bin/bash

# reload systemd changes
systemctl --user daemon-reload

# launch background tasks that restart freepbx only if there aren't any calls in progress
echo "Restarting FreePBX, Janus, NethCTI and Middleware server when there are no active calls"
restart-services-when-convenient mariadb freepbx janus nethcti-server nethcti-middleware nethcti-ui phonebook reports-api reports-redis reports-ui tancredi satellite
