# Build stage
FROM python:3-slim AS builder

WORKDIR /app

# Install build dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    gcc \
    python3-dev \
    portaudio19-dev \
    && rm -rf /var/lib/apt/lists/*

# clone the repository
RUN COMMIT="659142f6b20504c84d46c3883aa1f2090b7ecf44" \
    && curl -L https://github.com/nethesis/satellite/archive/${COMMIT}.tar.gz -o - | tar xzp --strip-component=1 -C /

# Copy requirements
COPY requirements.txt .

# Install dependencies
RUN pip install --no-cache-dir --user -r requirements.txt

# Final stage
FROM python:3-slim

# Install runtime dependencies for PyAudio
RUN apt-get update && apt-get install -y --no-install-recommends \
    libportaudio2 \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Copy installed packages from builder
COPY --from=builder /root/.local /root/.local

# Copy application files
COPY *.py /app/
COPY README.md /app/

# Make sure scripts in .local are usable
ENV PATH=/root/.local/bin:$PATH \
    PYTHONPATH=/root/.local/lib/python3.12/site-packages:$PYTHONPATH

# Set environment variables with default values (can be overridden at runtime)
ENV ASTERISK_URL="http://127.0.0.1:8088" \
    ARI_APP="satellite" \
    ARI_USERNAME="satellite" \
    ARI_PASSWORD="dummypassword" \
    ASTERISK_FORMAT="slin16" \
    RTP_HOST="0.0.0.0" \
    RTP_PORT="10000" \
    RTP_SWAP16="true" \
    RTP_HEADER_SIZE="12" \
    MQTT_URL="mqtt://127.0.0.1:1883" \
    MQTT_TOPIC_PREFIX="satellite" \
    MQTT_USERNAME="satellite" \
    MQTT_PASSWORD="dummypassword" \
    DEEPGRAM_API_KEY="" \
    LOG_LEVEL="INFO" \
    PYTHONUNBUFFERED="1"

# Expose RTP port
EXPOSE ${RTP_PORT}/udp

# Run the application
CMD ["python", "main.py"]
